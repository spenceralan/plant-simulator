<% @ids.each do |id| %>
  <% plant = Plant.find(id) %>
  <% unless plant.nil? %>
    <div class="plant col-sm-6">
      <p>Created at: <%= plant.created_at.strftime("%Y-%m-%d") %></p>
      <p>Height: <%= plant.height %> inches</p>
      <p><%= plant.alive? ? "Your plant was still alive." : "Your plant was killed. You murderer." %></p>
    </div>
  <% end %>
<% end %>